@model Dish

<div class="text-center">
    <h1>Add a Dish!</h1>
    <a href="/dishes">Home</a>
    <br>
    <form action="add_dish" method="post">
        <div class="form-group">
            <label>Name of Dish</label>
            <input asp-for="name">
            <br>
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Chef</label>
            <select asp-for="chefId">
            @{
                foreach(Chef c in ViewBag.AllChefs)
                {
                    <option value=@c.chefId>@c.firstname @c.lastname</option>
                }
            }
            </select>
            <br>
            <span asp-validation-for="chefId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Tastiness</label>
            <select asp-for="tastiness">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <br>
            <span asp-validation-for="tastiness" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label># of Calories</label>
            <input asp-for="calories">
            <br>
            <span asp-validation-for="calories" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="description" cols="30" rows="4"></textarea>
            <br>
            <span asp-validation-for="description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Add Dish" class="btn btn-primary">
        </div>
    </form>
</div>